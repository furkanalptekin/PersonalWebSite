@model DB.ViewModels.CvFileModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/ManagementLayout/Content/Kendo/kendo.material-v2.min.css" rel="stylesheet" />
<script src="~/ManagementLayout/Content/Kendo/jquery.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/kendo.all.min.js"></script>
<script src="~/js/ManagementPanel/CV.js"></script>

<div class="k-content">
    <div id="tabstrip">
        <ul>
            <li class="k-state-active">
                CV EKLE
            </li>
            <li>
                EKLENEN CVLER
            </li>
        </ul>

        <div>
            <form asp-controller="CV" asp-action="Add" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-4">
                        <label>CV'nin Adı:</label>
                        <input asp-for="Cv.CvAdi" class="k-textbox" />
                    </div>
                    <div class="col-4">
                        <input asp-for="File" name="File" id="File" type="file" />
                        <div class="demo-hint">Sadece <strong>PDF</strong> Dosyası Yüklenebilir.</div>
                    </div>
                    <div class="col-4">
                        <button class="k-button">KAYDET</button>
                    </div>
                </div>
            </form>
        </div>

        <div>
            <div id="CV"></div>
        </div>
    </div>
</div>
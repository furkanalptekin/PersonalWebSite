@model DB.Models.YabanciDil
@{
    ViewData["Title"] = "Operations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/ManagementLayout/Content/Kendo/kendo.material-v2.min.css" rel="stylesheet" />
<script src="~/ManagementLayout/Content/Kendo/jquery.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/kendo.all.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.culture.tr-TR.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.messages.tr-TR.min.js"></script>
<script src="~/js/ManagementPanel/BasicFunctions.js"></script>
<script src="~/js/ManagementPanel/Languages.js"></script>

<partial name="_Alert" />

<div id="tabstrip">
    <ul>
        <li class="k-state-active">
            YABANCI DİL EKLE
        </li>
        <li>
            YABANCI DİLLERİM
        </li>
    </ul>

    <div>
        <form asp-controller="Languages"
              asp-action="@((bool)ViewBag.Update ? "UpdateDB": "Operations")"
              method="post">
            @Html.AntiForgeryToken()
            <div class="col-12 row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Adı:</label>
                        <input asp-for="Adi" class="k-textbox form-control" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Seviyesi:</label>
                        <select asp-for="Seviyesi" asp-items="ViewBag.RatingA1" class="k-textbox form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-12 row">
                <div class="col-4">
                    <div class="form-group">
                        <label>Okuma Seviyesi:</label>
                        <select asp-for="OkumaSeviyesi" asp-items="ViewBag.Rating" class="k-textbox form-control"></select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Yazma Seviyesi:</label>
                        <select asp-for="YazmaSeviyesi" asp-items="ViewBag.Rating" class="k-textbox form-control"></select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Konuşma Seviyesi:</label>
                        <select asp-for="KonusmaSeviyesi" asp-items="ViewBag.Rating" class="k-textbox form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-12 m-2 clearfix">
                <button class="k-button pull-right">KAYDET</button>
            </div>
        </form>
    </div>

    <div>
        <div id="Lang"></div>
    </div>
</div>
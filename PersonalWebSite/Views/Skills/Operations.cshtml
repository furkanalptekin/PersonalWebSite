@model DB.Models.Yetenekler
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/ManagementLayout/Content/Kendo/kendo.material-v2.min.css" rel="stylesheet" />
<script src="~/ManagementLayout/Content/Kendo/jquery.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/kendo.all.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.culture.tr-TR.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.messages.tr-TR.min.js"></script>
<script src="~/js/ManagementPanel/BasicFunctions.js"></script>
<script src="~/js/ManagementPanel/KendoHelper.js"></script>
<script src="~/js/ManagementPanel/Skills.js"></script>

<partial name="_Alert" />

<div id="tabstrip">
    <ul>
        <li class="k-state-active">
            YETENEK EKLE
        </li>
        <li>
            YETENEKLERİM
        </li>
    </ul>

    <div>
        <form asp-controller="Skills"
              asp-action="@((bool)ViewBag.Update ? "UpdateDB": "Operations")"
              method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Adı <span class="text-danger">*</span></label>
                        <input asp-for="Adi" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="Adi"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Başarı Oranı <span class="text-danger">*</span></label>
                        <input asp-for="BasariOrani" type="number" min="0" max="100" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="BasariOrani"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Kategori <span class="text-danger">*</span></label>
                        <select asp-for="KategoriId" asp-items="ViewBag.SkillCategories" class="k-textbox form-control">
                            <option value="0">Kategori Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="KategoriId"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Renk</label>
                        <br />
                        <input asp-for="RenkKodu" id="colorPicker" class="form-control" />
                        <a href="javascript:;" onclick="GetRandomColor()" class="k-button ml-3">RASGELE</a>
                    </div>
                </div>
            </div>

            <button class="k-button saveButton">KAYDET</button>
        </form>
    </div>

    <div>
        <div id="Skills"></div>
    </div>
</div>
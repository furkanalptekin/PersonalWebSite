@model DB.ViewModels.AccountViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/ManagementLayout/Content/Kendo/kendo.material-v2.min.css" rel="stylesheet" />
<script src="~/ManagementLayout/Content/Kendo/jquery.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/kendo.all.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.culture.tr-TR.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.messages.tr-TR.min.js"></script>
<script src="~/js/ManagementPanel/BasicFunctions.js"></script>
<script src="~/js/ManagementPanel/KendoHelper.js"></script>
<script src="~/js/ManagementPanel/Accounts.js"></script>

<partial name="_Alert" />

<div id="tabstrip">
    <ul>
        <li class="k-state-active">
            HESAP EKLE
        </li>
        <li>
            HESAPLAR
        </li>
    </ul>

    <div>
        <form asp-controller="Account"
              asp-action="@((bool)ViewBag.Update ? "UpdateDB": "Operations")"
              method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Email <span class="text-danger">*</span></label>
                        <input asp-for="Email" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                @if ((bool)ViewBag.Update)
                {
                    <div class="col-6 col-md-3">
                        <div class="form-group">
                            <label>Eski Şifre <span class="text-danger">*</span></label>
                            <input type="password" asp-for="EskiSifre" class="k-textbox form-control" />
                            <span class="text-danger" asp-validation-for="EskiSifre"></span>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="form-group">
                            <label>Şifre <span class="text-danger">*</span></label>
                            <input type="password" asp-for="Sifre" class="k-textbox form-control" />
                            <span class="text-danger" asp-validation-for="Sifre"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Şifre <span class="text-danger">*</span></label>
                            <input type="password" asp-for="Sifre" class="k-textbox form-control" />
                            <span class="text-danger" asp-validation-for="Sifre"></span>
                        </div>
                    </div>
                }
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Kullanıcı Adı <span class="text-danger">* (Türkçe karakter kullanmayın!)</span></label>
                        <input asp-for="UserName" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Ad Soyad <span class="text-danger">*</span></label>
                        <input asp-for="NameSurname" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="NameSurname"></span>
                    </div>
                </div>
            </div>
            @if (ViewBag.Show == null)
            {
                <button class="k-button saveButton">KAYDET</button>
            }
        </form>
    </div>

    <div>
        <div id="accounts"></div>
    </div>
</div>
@model DB.ViewModels.CareerViewModel
@{
    ViewData["Title"] = "Operations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/ManagementLayout/Content/Kendo/kendo.material-v2.min.css" rel="stylesheet" />
<script src="~/ManagementLayout/Content/Kendo/jquery.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/kendo.all.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.culture.tr-TR.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.messages.tr-TR.min.js"></script>
<script src="~/js/ManagementPanel/BasicFunctions.js"></script>
<script src="~/js/ManagementPanel/Career.js"></script>

<partial name="_Alert" />

<div id="tabstrip">
    <ul>
        <li class="k-state-active">
            DENEYİM EKLE
        </li>
        <li>
            DENEYİMLERİM
        </li>
    </ul>

    <div>
        <form asp-controller="Career"
              asp-action="@((bool)ViewBag.Update ? "UpdateDB": "Operations")"
              method="post"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="col-12 row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Firma <span class="text-danger">*</span></label>
                        <input asp-for="MeslekiDeneyim.Firma" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="MeslekiDeneyim.Firma"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Pozisyon <span class="text-danger">*</span></label>
                        <input asp-for="MeslekiDeneyim.Pozisyon" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="MeslekiDeneyim.Pozisyon"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Başlangıç Tarihi</label>
                        <input id="baslangicTarihi" asp-for="MeslekiDeneyim.BaslangicTarih" class="form-control" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Bitiş Tarihi</label>
                        <input id="bitisTarihi" asp-for="MeslekiDeneyim.BitisTarih" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-12 row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Adres</label>
                        <textarea asp-for="MeslekiDeneyim.Adres" class="k-textbox form-control"></textarea>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Ikon</label>
                        <input asp-for="Icon" name="Icon" id="File" type="file" />
                    </div>
                </div>
            </div>
            <div class="col-12 m-2 clearfix">
                <button class="k-button pull-right">KAYDET</button>
            </div>
        </form>
    </div>

    <div>
        <div id="Exp"></div>
    </div>
</div>
@model DB.Models.Sertifikalar
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/ManagementLayout/Content/Kendo/kendo.material-v2.min.css" rel="stylesheet" />
<script src="~/ManagementLayout/Content/Kendo/jquery.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/kendo.all.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.culture.tr-TR.min.js"></script>
<script src="~/ManagementLayout/Content/Kendo/localization/kendo.messages.tr-TR.min.js"></script>
<script src="~/js/ManagementPanel/BasicFunctions.js"></script>
<script src="~/js/ManagementPanel/KendoHelper.js"></script>
<script src="~/js/ManagementPanel/Certificates.js"></script>

<partial name="_Alert" />

<div id="tabstrip">
    <ul>
        <li class="k-state-active">
            SERTİFİKA EKLE
        </li>
        <li>
            SERTİFİKALARIM
        </li>
    </ul>

    <div>
        <form asp-controller="Certificates"
              asp-action="@((bool)ViewBag.Update ? "UpdateDB": "Operations")"
              method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Adı <span class="text-danger">*</span></label>
                        <input asp-for="Adi" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="Adi"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Branş <span class="text-danger">*</span></label>
                        <input asp-for="Brans" class="k-textbox form-control" />
                        <span class="text-danger" asp-validation-for="Brans"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Tarih</label>
                        <input id="tarih" asp-for="Tarih" class="form-control" />
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Geçerlilik Süresi</label>
                        <input id="gecerlilikSuresi" asp-for="GecerlilikSuresi" class="form-control" />
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label>Firma</label>
                        <input asp-for="Firma" class="k-textbox form-control" />
                    </div>
                </div>
            </div>

            @if (ViewBag.Show == null)
            {
                <button class="k-button saveButton">KAYDET</button>
            }
        </form>
    </div>

    <div>
        <div id="certificates"></div>
    </div>
</div>